<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bronkz.bookingkz" version="1.6.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Бронируй.KZ</name>
    <description>Бронируй отдых, бронируй развлечения, бронируй всё!</description>
    <author email="m.polazhynets@hotmail.com" href="http://izzi.software">IZZI software</author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <access origin="*" />
    <access origin="https://www.xn--90aodoeldy.kz/" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="data:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="16" />
        <preference name="android-targetSdkVersion" value="24" />
        <icon density="mdpi" src="res/android/drawable-mdpi/ic_icon.png" />
        <icon density="hdpi" src="res/android/drawable-hdpi/ic_icon.png" />
        <icon density="xhdpi" src="res/android/drawable-xhdpi/ic_icon.png" />
        <icon density="xxhdpi" src="res/android/drawable-xxhdpi/ic_icon.png" />
        <icon density="xxxhdpi" src="res/android/drawable-xxxhdpi/ic_icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/icon-60.png" width="60" />
        <icon height="120" src="res/ios/icon-60@2x.png" width="120" />
